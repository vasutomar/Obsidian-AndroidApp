<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/MainIcon"
        android:layout_width="300sp"
        android:layout_centerHorizontal="true"
        android:layout_height="300sp"
        android:src="@drawable/icon_oval"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:id="@+id/empty"
        android:layout_below="@+id/MainIcon">

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginBottom="50sp"
        android:id="@+id/ButtonPanel"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="70sp">

        <Button
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/CaptureButton"
            android:layout_marginRight="30sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/ic_camera_blue_24dp"
            android:onClick="StartSend" />

        <Button
            android:layout_toRightOf="@+id/CaptureButton"
            android:id="@+id/DecodeButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/ic_lock_blue_24dp"
            android:onClick="StartDecode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginLeft="5sp"
            android:id="@+id/SendText"
            android:layout_below="@+id/CaptureButton"/>

        <TextView
            android:layout_marginLeft="30sp"
            android:layout_below="@+id/CaptureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decode"
            android:layout_toRightOf="@+id/SendText"/>

    </RelativeLayout>

    <Button
        android:onClick="StartAbout"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ButtonPanel"
        android:textAllCaps="false"/>

</RelativeLayout>