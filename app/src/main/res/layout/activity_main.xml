<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/MainIcon"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO OBSIDIAN"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@android:color/black"
        android:textSize="30sp"
        android:id="@+id/WelcomeMessage"
        android:layout_below="@+id/MainIcon"
        android:layout_centerHorizontal="true"/>

    <Button
        android:onClick="StartUserPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserPanelButton"
        android:layout_marginBottom="100sp"
        android:layout_marginRight="50sp"
        android:text="User panel"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:onClick="ExitApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExitButton"
        android:layout_marginBottom="100sp"
        android:layout_centerHorizontal="true"
        android:text="Exit"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:onClick="StartAboutApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AboutAppButton"
        android:layout_marginBottom="100sp"
        android:layout_marginLeft="50sp"
        android:text="About App"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>